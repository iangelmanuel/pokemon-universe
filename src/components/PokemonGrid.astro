---
import { Image } from "astro:assets"
import { PokemonTCG } from "pokemon-tcg-sdk-typescript"

type Props = {
  pokemon: PokemonTCG.Set
}

const { pokemon } = Astro.props
---

<a
  href={`/expansions/${pokemon.id}`}
  class="block group"
>
  <div
    class="atropos-inner p-4 rounded-lg border border-gray-100 shadow-md hover:shadow-lg transition-shadow duration-300 ease-in-out"
  >
    <Image
      src={pokemon.images.logo}
      alt={pokemon.name}
      width={128}
      height={128}
      loading="lazy"
      class="w-full object-cover rounded-lg mb-4 group-hover:scale-105 transition-transform duration-300 ease-in-out"
    />

    <h2 class="text-2xl font-bold capitalize text-center">{pokemon.name}</h2>
  </div>
</a>
